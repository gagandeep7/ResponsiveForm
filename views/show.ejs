<%- include ('partials/header') %>
    <div class="container">
        <h1 class="brand">
          <span>TechUse</span> Solution Ltd.
        </h1>
        <div class="wrapper animated bounceInLeft">
          <div class="company-info">
            <h3>TechUse Solution Ltd.</h3>
            <ul>
              <li><i class="fa fa-road"></i> G.G.S Avenue</li>
              <li><i class="fa fa-phone"></i> +91-7009093819</li>
              <li><i class="fa fa-envelope"></i> gag7550@gmail.com</li>
            </ul>
          </div>
            <div class="contact">
              <h3>Email Us</h3>
              <form action="/form" method="POST">
                <p>
                  <label>Name</label>
                  <input type="text" name="data[name]" required/>
                </p>
  
                <p>
                  <label>Email</label>
                  <input type="email" name="data[email]" required />
                </p>
                <p>
                  <label>Company</label>
                  <input type="text" name="data[company]" required />
                </p>
                <p>
                  <label>Phone No</label>
                  <input type="text" name="data[phone]"pattern="[7-9]{1}[0-9]{9}"  required/>
                </p>
                <p class = "full">
                  <label>Message</label>
                  <textarea name="" id=""  rows="5" name="data[message]" required></textarea>
                </p>
                <p class="full">
                    <button>Submit</button>
                </p>
              </form>
          </div>
        </div>
      </div>
